    <script>
        const firebaseConfig = {
            apiKey: "AIzaSyCvt2qtx9HMYHZKc4C8GzI2G8vlxqIJoOc",
            authDomain: "gasparcalendar-80266.firebaseapp.com",
            databaseURL: "https://gasparcalendar-80266-default-rtdb.asia-southeast1.firebasedatabase.app",
            projectId: "gasparcalendar-80266",
            storageBucket: "gasparcalendar-80266.firebasestorage.app",
            messagingSenderId: "723813631446",
            appId: "1:723813631446:web:8b2904882134ffcc051077"
        };

        let currentDate = new Date();
        let selectedDate = null;
        let events = {};
        let editingEventId = null;
        let eventsRef = null;
        let isConnected = false;

        // È†ÅÈù¢ËºâÂÖ•ÊôÇÂü∑Ë°å
        loadLocalData();
        renderCalendar();
        document.addEventListener('DOMContentLoaded', initFirebase);

        function loadLocalData() {
            try {
                const saved = localStorage.getItem('sharedCalendarEvents');
                if (saved) events = JSON.parse(saved);
            } catch (e) { events = {}; }
        }

        function saveLocalData() {
            localStorage.setItem('sharedCalendarEvents', JSON.stringify(events));
        }

        function initFirebase() {
            try {
                firebase.initializeApp(firebaseConfig);
                const database = firebase.database();
                eventsRef = database.ref('events');

                database.ref('.info/connected').on('value', (snap) => {
                    isConnected = snap.val() === true;
                    updateStatus(isConnected);
                });

                eventsRef.on('value', (snapshot) => {
                    const data = snapshot.val();
                    if (data) events = data;
                    saveLocalData();
                    renderCalendar();
                    updateOpenModal();
                    updateStatus(true);
                }, () => updateStatus(false));

            } catch (e) {
                console.log('Èõ¢Á∑öÊ®°Âºè', e);
                updateStatus(false);
            }
        }

        function syncToCloud() {
            if (eventsRef && isConnected) {
                eventsRef.set(events).catch(() => {});
            }
        }

        function updateStatus(online) {
            const el = document.getElementById('connectionStatus');
            const text = document.getElementById('statusText');
            if (el && text) {
                el.className = 'connection-status ' + (online ? 'online' : 'offline');
                text.textContent = online ? 'Â∑≤ÂêåÊ≠•' : 'Èõ¢Á∑ö';
            }
        }

        function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();
            
            const monthEl = document.getElementById('currentMonth');
            if (monthEl) {
                monthEl.textContent = `${year}Âπ¥ ${month + 1}Êúà`;
            }

            const firstDay = new Date(year, month, 1).getDay();
            const totalDays = new Date(year, month + 1, 0).getDate();
            const prevLastDay = new Date(year, month, 0).getDate();
            const container = document.getElementById('calendarDays');
            
            if (!container) return;
            
            container.innerHTML = '';
            const today = new Date();

            for (let i = firstDay - 1; i >= 0; i--) {
                container.appendChild(createDay(prevLastDay - i, year, month - 1, true));
            }

            for (let d = 1; d <= totalDays; d++) {
                const isToday = today.getFullYear() === year && today.getMonth() === month && today.getDate() === d;
                container.appendChild(createDay(d, year, month, false, isToday));
            }

            const remaining = 42 - container.children.length;
            for (let d = 1; d <= remaining; d++) {
                container.appendChild(createDay(d, year, month + 1, true));
            }
        }

        function createDay(day, year, month, isOther, isToday = false) {
            const el = document.createElement('div');
            el.className = 'day' + (isOther ? ' other-month' : '') + (isToday ? ' today' : '');

            let y = year, m = month;
            if (month < 0) { m = 11; y--; }
            else if (month > 11) { m = 0; y++; }

            const key = `${y}-${String(m+1).padStart(2,'0')}-${String(day).padStart(2,'0')}`;
            const dayEvents = events[key] ? Object.values(events[key]) : [];
            dayEvents.sort((a, b) => (a.time || '').localeCompare(b.time || ''));

            el.innerHTML = `
                <div class="day-number">${day}</div>
                <div class="events-container">
                    ${dayEvents.slice(0,3).map(e => `<div class="event priority-${e.priority}">${e.title}</div>`).join('')}
                </div>
                ${dayEvents.length > 0 ? `<div class="event-count">${dayEvents.length}</div>` : ''}
            `;
            el.onclick = () => openDayModal(y, m, day);
            return el;
        }

        function previousMonth() { 
            currentDate.setMonth(currentDate.getMonth() - 1); 
            renderCalendar(); 
        }
        
        function nextMonth() { 
            currentDate.setMonth(currentDate.getMonth() + 1); 
            renderCalendar(); 
        }
        
        function goToToday() { 
            currentDate = new Date(); 
            renderCalendar(); 
        }

        function openDayModal(year, month, day) {
            selectedDate = { year, month, day };
            document.getElementById('modalDate').textContent = `${year}Âπ¥${month+1}Êúà${day}Êó•`;
            renderEventList();
            document.getElementById('dayModal').classList.add('active');
        }

        function closeModal() { 
            document.getElementById('dayModal').classList.remove('active'); 
        }

        function showAddForm() {
            editingEventId = null;
            document.getElementById('eventModalTitle').textContent = 'Ê∑ªÂä†Êó•Á®ã';
            document.getElementById('eventForm').reset();
            document.getElementById('eventModal').classList.add('active');
        }

        function closeEventModal() {
            document.getElementById('eventModal').classList.remove('active');
            editingEventId = null;
        }

        function updateOpenModal() {
            if (selectedDate && document.getElementById('dayModal').classList.contains('active')) {
                renderEventList();
            }
        }

        function renderEventList() {
            const key = `${selectedDate.year}-${String(selectedDate.month+1).padStart(2,'0')}-${String(selectedDate.day).padStart(2,'0')}`;
            const list = document.getElementById('eventList');
            const dayEvents = events[key] ? Object.values(events[key]) : [];

            if (dayEvents.length === 0) {
                list.innerHTML = '<div class="no-events">üì≠ Ê≤íÊúâÊó•Á®ã</div>';
                return;
            }

            dayEvents.sort((a, b) => (a.time || '').localeCompare(b.time || ''));
            list.innerHTML = dayEvents.map(e => `
                <div class="event-item">
                    <div class="event-info">
                        <h4>
                            ${e.time ? `<span class="event-time">${e.time}</span>` : ''}
                            ${e.title}
                            <span class="priority-badge ${e.priority}">${e.priority === 'high' ? 'È´ò' : e.priority === 'medium' ? '‰∏≠' : '‰Ωé'}</span>
                        </h4>
                        ${e.description ? `<p>${e.description}</p>` : ''}
                    </div>
                    <div class="event-actions">
                        <button class="edit-btn" onclick="editEvent('${e.id}')">Á∑®ËºØ</button>
                        <button class="delete-btn" onclick="deleteEvent('${e.id}')">Âà™Èô§</button>
                    </div>
                </div>
            `).join('');
        }

        function saveEvent(e) {
            e.preventDefault();
            const key = `${selectedDate.year}-${String(selectedDate.month+1).padStart(2,'0')}-${String(selectedDate.day).padStart(2,'0')}`;
            const id = editingEventId || Date.now().toString();

            if (!events[key]) events[key] = {};
            events[key][id] = {
                id,
                title: document.getElementById('eventTitle').value,
                time: document.getElementById('eventTime').value,
                priority: document.getElementById('eventPriority').value,
                description: document.getElementById('eventDescription').value
            };

            saveLocalData();
            syncToCloud();
            renderCalendar();
            renderEventList();
            closeEventModal();
            showToast('Â∑≤‰øùÂ≠ò', 'success');
        }

        function editEvent(id) {
            const key = `${selectedDate.year}-${String(selectedDate.month+1).padStart(2,'0')}-${String(selectedDate.day).padStart(2,'0')}`;
            const ev = events[key]?.[id];
            if (!ev) return;

            editingEventId = id;
            document.getElementById('eventModalTitle').textContent = 'Á∑®ËºØÊó•Á®ã';
            document.getElementById('eventTitle').value = ev.title || '';
            document.getElementById('eventTime').value = ev.time || '';
            document.getElementById('eventPriority').value = ev.priority || 'low';
            document.getElementById('eventDescription').value = ev.description || '';
            document.getElementById('eventModal').classList.add('active');
        }

        function deleteEvent(id) {
            if (!confirm('Á¢∫ÂÆöÂà™Èô§Ôºü')) return;
            const key = `${selectedDate.year}-${String(selectedDate.month+1).padStart(2,'0')}-${String(selectedDate.day).padStart(2,'0')}`;
            
            if (events[key] && events[key][id]) {
                delete events[key][id];
                if (Object.keys(events[key]).length === 0) {
                    delete events[key];
                }
            }

            saveLocalData();
            syncToCloud();
            renderCalendar();
            renderEventList();
            showToast('Â∑≤Âà™Èô§', 'success');
        }

        function showToast(message, type) {
            const existing = document.querySelector('.toast');
            if (existing) existing.remove();

            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.textContent = message;
            document.body.appendChild(toast);

            setTimeout(() => toast.remove(), 3000);
        }
    </script>
</body>
</html>
